{
  "name": "TunnelSwitch",
  "version": "1.0.9",
  "manifest_version": 3,
  "description": "cycle through your proxy settings",
  "icons": { "128": "asset/image/tunnel_switch.png" },
  "background": {
    "service_worker": "asset/js/background.js"
  },
  "permissions": [
    "proxy", 
    "tabs", 
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
      "default_title": "Click to change the proxy",
      "default_icon": "asset/image/direct.png"
  },
  "options_ui": {
    "page": "asset/html/options.html",
    "open_in_tab": true
  },
  "homepage_url": "https://github.com/oylbin/tunnel-switch"
}
